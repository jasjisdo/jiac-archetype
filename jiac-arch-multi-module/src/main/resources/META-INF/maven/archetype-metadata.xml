<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor name="jiacv">
	<!-- project structure definition -->
	<fileSets>
		<!-- api module configuration -->
		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory>api</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="false" packaged="true" encoding="UTF-8">
			<directory>api/src/main/java</directory>
		</fileSet>
		<!-- domain module configuration -->
		<fileSet filtered="true" packaged="false" encoding="UTF-8">
			<directory>domain</directory>
			<includes>
				<include>**/*.xml</include>
			</includes>
		</fileSet>
		<fileSet filtered="false" packaged="true" encoding="UTF-8">
			<directory>domain/src/main/java</directory>
		</fileSet>
	</fileSets>
	<!-- required (project) properties -->
	<requiredProperties>
		<requiredProperty key="groupId">
			<defaultValue>de.dailab</defaultValue>
		</requiredProperty>
		<requiredProperty key="package">
			<defaultValue>${groupId}.${artifactId}</defaultValue>
		</requiredProperty>
		<requiredProperty key="java-version">
			<defaultValue>6</defaultValue>
		</requiredProperty>
		<requiredProperty key="project-name" />
		<requiredProperty key="project-url">
			<defaultValue>www.dai-labor.de</defaultValue>
		</requiredProperty>
		<requiredProperty key="project-inception-year" />
		<requiredProperty key="vendor-name">
			<defaultValue>DAI-Labor, TU Berlin</defaultValue>
		</requiredProperty>
		<requiredProperty key="vendor-url">
			<defaultValue>www.dai-labor.de</defaultValue>
		</requiredProperty>
	</requiredProperties>
</archetype-descriptor>
